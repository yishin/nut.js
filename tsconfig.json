{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es6"],
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "esModuleInterop": true
  },
  "include": ["lib/**/*.ts", "index.ts"],
  "exclude": ["node_modules"]
}
